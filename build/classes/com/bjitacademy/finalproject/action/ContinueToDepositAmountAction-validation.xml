<!DOCTYPE validators PUBLIC
"-//Apache Struts//XWork Validator 1.0.2//EN"
"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
	<field name="ledgeraccount.bankAccNumber">
		<field-validator type="required" short-circuit="true">
			<message>Account Number is required!</message>
		</field-validator>		
	</field>
	
	<field name="ledgeraccount.depositAmount">
		<field-validator type="required" short-circuit="true">
			<message>Deposit Amount Required</message>
		</field-validator>
	</field>
	<field name="ledgeraccount.refInfo">
		<field-validator type="required">
			<message>Ref.No/ Check No Required</message>
		</field-validator>
	</field>
</validators>